{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "esnext",
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": ["@types", "node_modules/@types"],
    "experimentalDecorators": true,
    "isolatedModules": true
  },
  "exclude": ["dist", "**/*.test.ts"]
}
